<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farniks.qrgeneratorscanner.QrGeneratorScanner">
   <children>
      <HBox alignment="CENTER" prefHeight="58.0" prefWidth="450.0">
         <children>
            <Label contentDisplay="CENTER" text="GeneratorScannerQR" textOverrun="CENTER_ELLIPSIS">
               <font>
                  <Font name="Century Gothic Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="42.0" prefWidth="450.0">
         <children>
            <Label text="LINK:">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="linkTextField" prefHeight="25.0" prefWidth="353.0" promptText="Contenido para QR" style="-fx-background-radius: 10;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <ImageView fx:id="qrIcon" fitHeight="325.0" fitWidth="325.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin></ImageView>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="450.0">
         <children>
            <Button fx:id="generatorQRButton" mnemonicParsing="false" onAction="#generateQRCode" style="-fx-background-radius: 15;" text="Generar QR">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="scanerQRButton" mnemonicParsing="false" onAction="#scanQRCodeFromFileAction" style="-fx-background-radius: 15;" text="Escanear QR">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="exportQRButton" mnemonicParsing="false" onAction="#exportCode" style="-fx-background-radius: 15;" text="Exportar QR">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <VBox prefHeight="100.0" prefWidth="450.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="450.0">
               <children>
                  <Label text="Contenido escaner">
                     <font>
                        <Font name="Century Gothic Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="430.0">
               <children>
                  <Label fx:id="contentQRLabel" prefHeight="25.0" prefWidth="386.0" text="...">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="goLinkButton" mnemonicParsing="false" onAction="#goLink" prefHeight="30.0" prefWidth="49.0" style="-fx-background-radius: 10;" text="Ir">
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="copyLinkButton" mnemonicParsing="false" onAction="#copyLink" prefHeight="30.0" prefWidth="69.0" style="-fx-background-radius: 10;" text="Copiar">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
